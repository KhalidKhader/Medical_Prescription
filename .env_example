# Medical Prescription AI APIs - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="Medical Prescription AI APIs"
APP_VERSION="1.0.0"
LOG_LEVEL="INFO"
DEBUG="true"

# =============================================================================
# Google Gemini Configuration
# =============================================================================
# REQUIRED: Your Google Gemini API key
GOOGLE_API_KEY="your-google-gemini-api-key"

# Gemini model hierarchy (fallback order: Primary -> Secondary -> Fallback)
GEMINI_MODEL_PRIMARY="gemini-2.5-pro-latest"
GEMINI_MODEL_SECONDARY="gemini-1.5-pro-latest"
GEMINI_MODEL_FALLBACK="gemini-1.5-flash-latest"

# Google Cloud configuration (optional, for VertexAI)
VERTIX_AI_PROJECT_ID="your-vertex-ai-project-id"
GOOGLE_CLOUD_PROJECT="your-google-cloud-project"
GOOGLE_CLOUD_LOCATION="us-central1"
GOOGLE_GENAI_USE_VERTEXAI=false
# Gemini model parameters
GEMINI_TEMPERATURE="0.0"
GEMINI_MAX_TOKENS="8192"

# =============================================================================
# Neo4j RxNorm Knowledge Graph Configuration
# =============================================================================
# Neo4j connection settings
NEO4J_URI="bolt://localhost:7687"  # Your Neo4j database URI
NEO4J_USER="neo4j"                 # Your Neo4j username
NEO4J_PASSWORD="your-password"     # Your Neo4j password
NEO4J_DATABASE="neo4j"            # Your Neo4j database name

# Neo4j connection pool settings
NEO4J_MAX_CONNECTION_LIFETIME="30"
NEO4J_MAX_CONNECTIONS="50"
NEO4J_CONNECTION_TIMEOUT="30"

# =============================================================================
# LangFuse Observability Configuration
# =============================================================================
# REQUIRED: Your LangFuse credentials for observability and tracing
LANGFUSE_SECRET_KEY="your-langfuse-secret-key"  # Format: sk-lf-xxxxxxxx
LANGFUSE_PUBLIC_KEY="your-langfuse-public-key"  # Format: pk-lf-xxxxxxxx
LANGFUSE_HOST="https://cloud.langfuse.com"

# =============================================================================
# Image Processing Configuration
# =============================================================================
# Maximum image size for prescription uploads (in MB)
MAX_IMAGE_SIZE_MB="10"

# Supported image formats (comma-separated)
SUPPORTED_IMAGE_FORMATS="jpg,jpeg,png,pdf"

# Image processing timeout (in seconds)
IMAGE_PROCESSING_TIMEOUT="30"

# =============================================================================
# Agent Configuration
# =============================================================================
# Maximum retry attempts for failed agent operations
MAX_AGENT_RETRIES="3"

# Timeout for individual agent operations (in seconds)
AGENT_TIMEOUT_SECONDS="60"

# Enable/disable JSON repair functionality
JSON_REPAIR_ENABLED="true"

# =============================================================================
# CORS Configuration
# =============================================================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:8000,http://localhost:8005"
